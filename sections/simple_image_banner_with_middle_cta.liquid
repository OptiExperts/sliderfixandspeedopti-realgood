{% if section.settings.section_enable %}
<div class="simple_image_banner_middle_cta">
  <img class="bnrImg lazy" data-src="{% if section.settings.banner_img != blank %} {{ section.settings.banner_img | img_url: '1905x664' }}{% else %} https://via.placeholder.com/1920x600 {% endif %}" class="lazyload img-fluid" alt="">
  <img class="bnrImg lazy mobile" data-src="{% if section.settings.banner_img_mob != blank %} {{ section.settings.banner_img_mob | img_url: '768x400' }}{% else %} https://via.placeholder.com/768x400 {% endif %}" class="lazyload img-fluid" alt="">
  {% if section.settings.call_to_action_btn != blank %}
  <span class="middle_cta">
    <a href="{{ section.settings.call_to_action_btn_link }}" class="btn--type-1">{{ section.settings.call_to_action_btn }}</a>
  </span>
  {% endif %}  
</div>
{% endif %}

{% schema %}
  {
    "name": "Banner With Middle CTA",
    "settings": [
    {
      "type": "header",
          "content": "Section Enable"
        },
    {
          "type": "checkbox",
          "id": "section_enable",
          "label": "Section Enable",  
          "default": true
        },
    {
          "type": "header",
          "content": "Banner"
        },
        {
          "type": "image_picker",
          "id": "banner_img",
          "label": "Image",
          "info": "Recommended Size: 1920 x 600 px"
        },
    {
          "type": "image_picker",
          "id": "banner_img_mob",
          "label": "Image (Mobile)"
        },
    {
          "type": "text",
          "id": "call_to_action_btn",
          "label": "Call To Action Btn",
          "default": "What Makes Us Different"
        },
    {
          "type": "url",
          "id": "call_to_action_btn_link",
          "label": "URL"
        }
  ]
  }
{% endschema %}

