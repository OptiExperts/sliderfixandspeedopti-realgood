          "limit": 4,
              "settings": 
              [
                {
                  "type": "image_picker",
                  "id": "g4col_item_image",
                  "label": "Item Image"
                },
                {
                  "type": "textarea",
                  "id": "g4col_item_title",
                  "label": "Item Title"
                },
                {
                  "type": "url",
                  "id": "g4col_item_link",
                  "label": "Item Link"
                }
              ]
   		}
  	],
    "presets": [
	    {
	        "category": "3. collections",
	        "name": "Grid Four Col w Heading"
	    }
    ]
}
{% endschema %}