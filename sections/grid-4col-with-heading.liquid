<div class="rgf_4colgrid_items grid_4col_items" id="section-{{ section.id }}">
  <div class="container wide">
    
    <div class="heading">
      {%- if section.settings.g4colwh_section_title != '' -%}
      <h2>{{ section.settings.g4colwh_section_title }}</h2>
      {%- endif -%}
      {%- if section.settings.g4colwh_section_subtitle != '' -%}
      <h3>{{ section.settings.g4colwh_section_subtitle }}</h3>
      {%- endif -%}
    </div>
    
	<div class="gridItems">
      {%- for block in section.blocks -%}
          {% assign count = 0 %}
          <div id="block-{{ block.id }}" class="gridItem gridItem_{{forloop.index0}}">
            <div class="item--image">
              {%- if block.settings.g4col_item_link -%}
              <a href="{{block.settings.g4col_item_link}}">
              {% endif %}
              {%- if block.settings.g4col_item_image -%}
              <img src="{{ block.settings.g4col_item_image | img_url: 'master' }}" alt="{{ block.settings.g4col_item_title }}">
              {% endif %}
              {%- if block.settings.g4col_item_link -%}
              </a>
              {% endif %}
            </div>
            <div class="text">
              {%- if block.settings.g4col_item_title != '' -%}
              
              {%- if block.settings.g4col_item_link -%}
              <a href="{{block.settings.g4col_item_link}}">
              {% endif %}
              <h4>{{ block.settings.g4col_item_title }}</h4>  
              {%- if block.settings.g4col_item_link -%}
              </a>
              {% endif %}
              
              {%- endif -%}
            </div>
          </div>
          {% assign count = count | plus: 1 %}
      {%- endfor -%}
      
    </div>
    
  </div>
</div>	
<style>
  
  #section-{{ section.id }}{
  	background:#fff;
    display:block;
    margin:0px auto;
    padding:55px 0 85px;
  }	
  #section-{{ section.id }} .heading{
  	text-align:center;
  }
  #section-{{ section.id }} .heading h2{
  	font-size:60px;
    line-height:1.1;
    color:#000;
    font-weight:800;
/*     font-family:"Montserrat"; */
    font-family:'Adrianna';
    margin-bottom:24px;
  }
  #section-{{ section.id }} .heading h3{
  	font-size:40px;
    line-height:1.1;
    color:#000;
/*     font-weight:600; */
/*     font-family:"Montserrat"; */
    font-family:'Adrianna';
    font-weight:400;
    margin-bottom:65px;
  }
  #section-{{ section.id }} .gridItems{
  	display:-ms-flex;
    display:-webkit-flex;
    display:flex;
    position:relative;
    flex-direction: row;
    flex-wrap:wrap;
  }  
  #section-{{ section.id }} .gridItem{
    width:25%;
    position:relative;
    text-align:center;
  }
  #section-{{ section.id }} .gridItem .item--image{
  	min-height:235px;
  }
  #section-{{ section.id }} .gridItem .text{
  	max-width:255px;
    margin:0 auto;
    display:block;
  }
  #section-{{ section.id }} .gridItem h4{
    font-size:18px;
    color:#000;
    font-weight:600;
    margin-top:15px;
/*     font-family:"Montserrat"; */
    font-family:'Adrianna';
  }
  #section-{{ section.id }} .gridItem a:hover{
  	opacity:0.8;
  }
  
  
