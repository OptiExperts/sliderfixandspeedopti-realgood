    }
    #section-{{ section.id }} .gridItem .item--image{
      min-height:200px;
    }
  
  }
  @media (max-width:1139px){
  	#section-{{ section.id }} .heading h2{
      font-size:36px;
      margin-bottom:16px;
    }
    #section-{{ section.id }} .heading h3{
      font-size:30px;
      margin-bottom:35px;
    }
    
  }
  @media (max-width:991px){
  	#section-{{ section.id }} .heading h2{
     font-size:32px; 
    }
    #section-{{ section.id }} .heading h3{
      font-size:26px;
    }
    #section-{{ section.id }} .gridItem{
      width:50%;
      margin-bottom:40px;
    }
    #section-{{ section.id }} .gridItem h4{
      margin-top:10px;
    }
    #section-{{ section.id }}{
      padding:50px 0;
    }
    
  }
  @media (max-width:767px){
  	#section-{{ section.id }} .heading h2{
      font-size:30px; 
    }
    #section-{{ section.id }} .heading h3{
      font-size:24px;
    }
    #section-{{ section.id }} .gridItem{
      padding:0 10px;
    }
  }
  @media (max-width:639px){
  	#section-{{ section.id }} .heading h2{
      font-size:28px;
      margin-bottom:12px;
    }
    #section-{{ section.id }} .gridItem{
      padding:0 5px;
    }
    #section-{{ section.id }} .heading h3{
      margin-bottom:30px;
    }
    #section-{{ section.id }}{
      padding:45px 0 35px;
    }
    #section-{{ section.id }} .gridItem .item--image{
      min-height:180px;
    }
  }
  @media (max-width:479px){
  	#section-{{ section.id }} .heading h2{
      font-size:24px;
      margin-bottom:10px
    }
    #section-{{ section.id }} .heading h3{
      margin-bottom:25px;
      font-size:20px;
    }
    #section-{{ section.id }}{
      padding:45px 0 25px;
    }
    #section-{{ section.id }} .gridItem{
      width:100%;
      margin-bottom:35px;
      padding:0;
    }
    #section-{{ section.id }} .gridItem .item--image{
      min-height:unset;
    }
    #section-{{ section.id }} .gridItem h4{
      margin-top:6px;
      font-size:16px;
      line-height:1.25;
    }
  }
  
  

</style>
{% schema %}
{
    "name": "Grid Four Col w Heading",
    "settings": [
    	{
         "type": "header",
         "content": "Grid Block Settings"
      	},
		{
          "type": "text",
          "id": "g4colwh_section_title",
          "label": "Section Title",
		  "default": "Pro Tips"
        },
		{
          "type": "text",
