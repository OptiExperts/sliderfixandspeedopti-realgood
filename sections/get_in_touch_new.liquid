{% if section.settings.section_enable %}
<div id="section-{{ section.id }}" class="">
  <div class="contact-form-area">
    <div class="container">
      <div class="row">
        <div class="col-md-6 cForm">
          <div class="lezada-form contact-form">
            {% include 'contact-form' %}
          </div>
        </div>
        <div class="col-md-6 cInfo">
          <div class="contact_info">
            <div class="top_part">
              {{ section.settings.contactinfo_heading }}
            </div>
            <div class="bottom_part">
              {% if section.settings.support_text != blank %}
              <span class="supportText">{{ section.settings.support_text }}</span>
              {% endif %}
              <img class="supportImg" src="{% if section.settings.support_image != blank %} {{ section.settings.support_image | img_url: 'master' }}{% else %} https://via.placeholder.com/922x329 {% endif %}" class="lazyload img-fluid" alt="">
          	</div>
          </div>
        </div>
        <div class="col-md-6 cForm mobile">
          <div class="lezada-form contact-form">
            {% if section.settings.mobile_heading != blank %}
            <div class="mobile--heading">
              <h3>{{section.settings.mobile_heading}}</h3>
            </div>
            {% endif %}
            {% include 'contact-form' %}
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
{% endif %}

