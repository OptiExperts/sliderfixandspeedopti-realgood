<style>

  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'vertical_menu_style' -%}
    #section-{{ section.id }}.header-vertical,#section-{{ section.id }}.vertical-menu-mobile-header{
      background-color: {{ block.settings.sidebar_bg_color }};
    }
    #section-{{ section.id }} .header-bottom-container .header-right-icons.vertical-dark-menu-bottom .single-icon a i,.vertical-menu-mobile-header .header-right-icons .single-icon a i {
      color: {{ block.settings.sidbar_account_icon_color }};
    }
    #section-{{ section.id }} .header-bottom-container .header-right-icons.vertical-dark-menu-bottom p.copyright-text {
      color: {{ block.settings.sidebar_text_color }};
    }
    #section-{{ section.id }} .menu-icon-container a .menu-icon {
      background-color: {{ block.settings.sidebar_menu_bar_icon_color  }};
    }

    #section-{{ section.id }} .header-bottom-container .header-right-icons.vertical-dark-menu-bottom .single-icon a span,#section-{{ section.id }}  .header-right-icons .single-icon a span.count {
      border-color:  {{ block.settings.cart_bg_color }};
      background: {{ block.settings.cart_bg_color }};
      color: {{ block.settings.cart_color }};
    }
  
  
    .vertical-menu-container-dark {
      background-color: {{ block.settings.main_menu_bg_color }};
    }
     .vertical-menu-container-dark nav > ul > li > a {
      color: {{ block.settings.main_menu_color }};
    }
     .vertical-menu-container-dark nav > ul > li > a::after {
      background-color: {{ block.settings.main_menu_hover_border_color }};
    }


    .vertical-menu-container-dark nav > ul > li.has-children > ul,
    .vertical-menu-container-dark nav > ul > li.has-children > ul li.has-children ul.multilevel-submenu {
      background-color: {{ block.settings.submenu_bg_color }};
    }
    .vertical-menu-container-dark nav > ul > li.has-children > ul li a{
      color: {{ block.settings.submenu_color }};
    }
     .vertical-menu-container-dark nav > ul > li.has-children > ul li.has-children::after {
      color: {{ block.settings.submenu_arrow_color }};
    }
     .vertical-menu-container-dark nav > ul > li.has-children > ul li a::after {
      background-color: {{ block.settings.submenu_hover_border_color }};
    }
  
  
    
  #section-{{ section.id }} .site-mobile-nav .dl-menu li a span,.vertical-menu-container-dark nav > ul > li > a span {
    background: {{ block.settings.menu_badge_bg_color }};
    color: {{ block.settings.menu_badge_color }};
  }
  #section-{{ section.id }} .site-mobile-nav .dl-menu li a span::before,.vertical-menu-container-dark nav > ul > li > a span::before {
    background: {{ block.settings.menu_badge_bg_color }};
  }
  #section-{{ section.id }} .site-mobile-nav .dl-menu li a span.sale,.vertical-menu-container-dark nav > ul > li > a span.sale {
    background: {{ block.settings.menu_sale_badge_bg_color }};
    color: {{ block.settings.menu_sale_badge_color }};
  }
  #section-{{ section.id }} .site-mobile-nav .dl-menu li a span.sale::before, .vertical-menu-container-dark nav > ul > li > a span.sale::before { 
    background: {{ block.settings.menu_sale_badge_bg_color }};
  }

    .vertical-menu-mobile-header .site-mobile-navigation .hamburger .hamburger-box .hamburger-inner,
    .vertical-menu-mobile-header .site-mobile-navigation .hamburger .hamburger-box .hamburger-inner::before, 
    .vertical-menu-mobile-header .site-mobile-navigation .hamburger .hamburger-box .hamburger-inner::after{
      background-color: {{ block.settings.mobile_menu_bar_color }};
    }
    #section-{{ section.id }} .site-mobile-nav .dl-menu {
      background-color: {{ block.settings.mobile_menu_bg_color }};
    }
    #section-{{ section.id }} .site-mobile-nav .dl-menu li {
      border-color: {{ block.settings.menu_item_border_color }};
    }
    #section-{{ section.id }} .site-mobile-nav .dl-menu li > a:not(:only-child)::after {
      color: {{ block.settings.mobile_menu_arrow_color }};
    }
    #section-{{ section.id }} .site-mobile-nav .dl-menu li > a {
      color: {{ block.settings.mobile_menu_item_color }};
    }
    #section-{{ section.id }}  .site-mobile-nav .dl-menu li:hover > a {
      color: {{ block.settings.mobile_menu_hover_color }};
      background-color: {{ block.settings.mobile_menu_hover_bg_color }};
    }
    #section-{{ section.id }}  .site-mobile-nav .dl-menu li:hover > a::after {
      color: {{ block.settings.hover_dropdown_arrow_color }};
    }
  

  {%- endcase -%}
  {%- endfor -%}

  .theme-logo img{
    max-width: {{ section.settings.logo_width }}px;
  }
</style>

