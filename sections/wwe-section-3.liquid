{% if section.settings.section_enable %}
<div class="wwe--sec3" id="section-{{ section.id }}">
    <div class="container">
      <div class="wrap">
        <h2>{{ section.settings.sec_heading }}</h2>
        <div class="desc">{{ section.settings.sec_desc }}</div>
      </div>
    </div>
</div>
{% endif %}

<style>
  #section-{{ section.id }}{
    position:relative;
    width:100%;
    display:block;
  }
  #section-{{ section.id }} .wrap{
  	width:100%;
    max-width:992px;
    margin:0 auto;
    display:block;
    padding:50px 0;
    text-align:center;
  }
  #section-{{ section.id }} .wrap h2{
  	font-size:36px;
    line-height:1.35;
    font-weight:bold;
    margin-bottom:15px;
    color:#000;
  }
  #section-{{ section.id }} .desc,
  #section-{{ section.id }} .desc p{
  	font-size:30px;
    line-height:1.35;
    color:#000;
  }
  
  @media screen and (max-width:1279px){
    #section-{{ section.id }} .wrap h2{font-size:32px;margin-bottom:12px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:28px;}
    
  }

  @media screen and (max-width:1139px){
    #section-{{ section.id }} .wrap h2{font-size:30px;margin-bottom:10px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:26px;}
  }
  @media screen and (max-width:991px){
    #section-{{ section.id }} .wrap{padding:40px 0;}
    #section-{{ section.id }} .container{max-width:95%;}
    #section-{{ section.id }} .wrap h2{font-size:26px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:22px;}
    
  }
  @media screen and (max-width:767px){
    #section-{{ section.id }} .container{max-width:100%;}
    #section-{{ section.id }} .wrap h2{font-size:24px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:20px;}
    
  }
  @media screen and (max-width:639px){
    #section-{{ section.id }} .wrap{padding:30px 0;}
    #section-{{ section.id }} .wrap h2{font-size:22px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:18px;}
    
    
  }
  @media screen and (max-width:479px){
    #section-{{ section.id }} .wrap h2{font-size:20px;line-height:1.15;margin-bottom:5px;}
    #section-{{ section.id }} .desc,
    #section-{{ section.id }} .desc p{font-size:16px;line-height:1.2;}
    
  }
  
</style>

{% schema %}
  {
    "name": "Why We Exists Section #3",
    "settings": [
		{
		  "type": "header",
          "content": "Section Enable"
        },
		{
          "type": "checkbox",
          "id": "section_enable",
          "label": "Section Enable",  
          "default": true
      	},
		{
          "type": "header",
          "content": "Content"
        },
		{
          "type": "text",
          "id": "sec_heading",
          "label": "Heading",
          "default": "Why We Make Nutritious Foods"
        },
		{
          "type": "textarea",
          "id": "sec_desc",
          "label": "Description",
		  "default": "<p>Today, 1 in 3 Americans are suffering from the health effects of obesity or diabetes due to poor nutrition.</p>"
        }
	]
  }
{% endschema %}

