          "default": "#fff"
        },
        {
          "type": "range",
          "id": "slider_overlay_opacity",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "label": "Overlay Color Opacity",
          "default": 0.2
        }
	],
	"blocks":[
      {
          "type": "slide",
          "name": "Slide",
          "settings": [
              {
                  "type": "image_picker",
                  "id": "slider_img",
                  "label": "Image",
                  "info": "Recommended Size: 1920 x 710px"
              },
			  {
                "type": "text",
                "id": "slider_caption_title_1",
                "label": "Slide Title 1",
				"default": "accessories"
			  },
			  {
                "type": "textarea",
                "id": "slider_caption_title_2",
                "default": "Bottle Grinder, <br> Small, 2-Piecehe",
				"info": "For DefaulT Title: Content <br> Content ..",
                "label": "Slide Title 2"
			  },
			  {
                "type": "text",
                "id": "slider_caption_btn",
                "default": "shop now",
                "label": "Slider Button"
			  },
			  {
                "id": "slider_caption_btn_link",
                "type": "url",
                "label": "Slider Btn Url"
              },
			  {
                "type":      "header",
                "content":   "Justify Content" 
              },
			  {
                "type":  "radio",
                "id":    "justify_content",
                "label": "Justify Content",
                "options": [
                  { "value": "start", "label": "Start" },
                  { "value": "center", "label": "Center" },
				  { "value": "end", "label": "end" }
                ],
                "default":   "end"
              },
			  {
                "type":      "header",
                "content":   "Content Alignment" 
              },
			  {
                "type":  "radio",
                "id":    "content_align",
                "label": "Content Alignment",
                "options": [
                  { "value": "left", "label": "Left" },
                  { "value": "center", "label": "Center" },
				  { "value": "right", "label": "Right" }
                ],
                "default":   "left"
              },
			  {
                "type":      "header",
                "content":   "Slider Title#1" 
              },
			  {
                "type": "color",
                "id": "caption_title1_color",
                "label": "Slider Caption Title#1",
                "default": "#333"	
              },
			  {
                "type":      "header",
                "content":   "Slider Title#2" 
              },
			  {
                "type": "color",
                "id": "caption_title2_color",
                "label": "Slider Caption Title#2",
                "default": "#333333"	
              },
			  {
                "type":      "header",
                "content":   "Slider Button" 
              },
			  {
                "type": "color",
                "id": "slide_caption_btn_bg_color",
                "label": "Slider Button Bg",
                "default": "#333333"	
              },
			  {
                "type": "color",
                "id": "slide_caption_btn_color",
                "label": "Slider Button Text Color",
                "default": "#fff"	
              },
			  {
                "type":      "paragraph",
                "content":   "Slider Button Hover" 
              },
			  {
                "type": "color",
                "id": "slide_caption_btn_border_color",
                "label": "Slider Button Hover Border Color",
                "default": "#333333"	
              },
			  {
                "type": "color",
                "id": "slide_caption_btn_hover_color",
                "label": "Slider Button Hover Text Color",
                "default": "#333"	
              }
			  
          ]
        }
     ],
	"presets": [
        {
          "category": "2. SlideShow",
          "name": "Hero Fluid Slider",
          "blocks":[
				{
					"type": "slide"
				},
				{
					"type": "slide"
				},
				{
					"type": "slide"
				}
			] 
        }
      ]
  }
{% endschema %}



<script>
  var slider_autoplay = {% if section.settings.slider_autoplay %} true{% else %} false {% endif %} ;
  $('.hero-slider-wrapper').owlCarousel({
    autoplay: true,
    nav: {{ section.settings.navigation_true }},
    navText: ['<i class="ti-angle-left">','<i class="ti-angle-right">'],
    loop: true,
    {% if settings.rtl_enable %}
    rtl: true, 
    {% endif %}
     autoplay: slider_autoplay,
    autoplayTimeout: 8000,
    items: 1,
    dots: {{ section.settings.pagination_true }},
  });
</script>
