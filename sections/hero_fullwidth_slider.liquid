			"type": "header",
            "content": "Pagination/Bullet"
		},
		{
          "type": "checkbox",
          "id": "pagination_true",
          "label": "Pagination True/False",
		  "default":  false
        },
		{
          "type": "color",
          "id": "slider_paginate_color",
          "label": "Paginate Color",
          "default": "#999"	
