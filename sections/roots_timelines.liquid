        },
        {
          "type": "section_timeline_right",
          "name": "Timeline (Right)",
          "limit": 12,
          "settings": [
            {
              "type": "header",
              "content": "Timeline Block with Image on Right"
            },
            {
                "type": "text",
                "id": "timeline_head",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "timeline_desc",
                "label": "Description"
            },
            {
                "type": "image_picker",
                "id": "timeline_image",
                "label": "Timeline Image",
                "info": "Recommended Size: 455 x 340 px Tilted PNG."
            }
          ]
        }
    ],
    "presets": [
        {
          "name": "Root: Timelines",
          "category": "1. Our Roots"
