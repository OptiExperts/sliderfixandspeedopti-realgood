  {
    "name": "Root: Timelines",
    "settings": [
      {
        "type": "header",
        "content": "Timelines Block"
      },
      {
        "type": "text",
        "id": "timeline_heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Timeline Button Text"
      }
    ],
    "blocks":[
        {
          "type": "section_timeline_left",
          "name": "Timeline (Left)",
