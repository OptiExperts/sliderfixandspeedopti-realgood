{% if section.settings.section_enable %}
<div class="custom_heading_type2" id="section-{{ section.id }}">
  	<div class="container">
    	<div class="row">
      		<div class="col-lg-12">
        		<div class="heading">
                    {% if section.settings.heading_text != blank %}
                      	<h1>{{ section.settings.heading_text }}</h1>
                    {% endif %}
        		</div>
      		</div>
    	</div>
  	</div>
</div>
{% endif %}

<style>  
  #section-{{ section.id }}{
  	padding:40px 0;
	width:100%;
    background:#fff;
  }
  #section-{{ section.id }} .heading{position:relative}
  #section-{{ section.id }} .heading h1{
    color:#FE776C;
	font-size:83px;
	line-height:1.15;
	font-weight:900 !important;
    width:auto;
    display:inline-block;
    position:relative;
    z-index:9;
    padding-right:3%;
    background:#fff
  }
  #section-{{ section.id }} .heading:after{
  	content:"";
    position:absolute;
    top:50%;
    right:0;
    width:100%;
    height:5px;
    background:#FD3424;
    z-index:0
  }
  
  
  {%- if section.settings.background_color -%}
    #section-{{ section.id }} {
      background:{{ section.settings.background_color }}; 
    }  
  {%- endif -%}
  {%- if section.settings.text_color -%}
    #section-{{ section.id }} .heading {
      color:{{ section.settings.text_color }}; 
    }  
  {%- endif -%}
  {%- if section.settings.text_bg_color -%}
    #section-{{ section.id }} .heading h1{
      background:{{ section.settings.text_bg_color }}; 
    }  
  {%- endif -%}
  {%- if section.settings.bar_color -%}
    #section-{{ section.id }} .heading h1:after {
      background:{{ section.settings.bar_color }}; 
    }  
  {%- endif -%}
  
  @media screen and (max-width:1139px){
    #section-{{ section.id }}{padding:35px 0}
    #section-{{ section.id }} .heading h1{font-size:65px}
  }
  @media screen and (max-width:979px){
    #section-{{ section.id }} .heading h1{font-size:55px}
    #section-{{ section.id }} .heading:after{height:4px;top:49%}
  }
  @media screen and (max-width:767px){
    #section-{{ section.id }}{padding:30px 0}
    #section-{{ section.id }} .heading h1{font-size:45px}
    #section-{{ section.id }} .heading:after{height:3px;top:48.5%}
  }
  @media screen and (max-width:639px){
    #section-{{ section.id }}{padding:25px 0 30px}
    #section-{{ section.id }} .heading h1{font-size:35px;font-size:1.15}
    #section-{{ section.id }} .heading:after{height:2px}
    #section-{{ section.id }}{display:none !important}
  }
  @media screen and (max-width:374px){
    #section-{{ section.id }} .heading h1{font-size:25px}
  }
  
</style>


{% schema %}
  {
    "name": "Heading Type #2",
    "settings": [		
		{
		  "type": "header",
          "content": "Section Enable"
        },
		{
          "type": "checkbox",
          "id": "section_enable",
          "label": "Section Enable",  
          "default": true
      	},
		{
         "type": "header",
         "content": "Heading Type #2"
        },		
		{
          "type": "text",
          "id": "heading_text",
          "label": "Title",
			"default": "Sample Title"
        },
        {
         "type": "header",
         "content": "Colors"
        },		
		{
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#fff"
        },
		{
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FE776C"
        },
		{
          "type": "color",
          "id": "text_br_color",
          "label": "Text Background Color",
          "default": "#fff"
        },
		{
          "type": "color",
          "id": "bar_color",
          "label": "Bar Color",
          "default": "#FD3424"
        }
		
	]
  }
{% endschema %}
