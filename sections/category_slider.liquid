  jQuery(function(){
    jQuery('.cat_slider_main').bxSlider({
      maxSlides: 5,
      minSlides: 1,
      infiniteLoop: true,
      responsive: true,
      slideWidth: 200,
      slideMargin: 10,
      pager: false,
      controls: false,
      auto: true,
    });
  });
  
</script>
  
  

