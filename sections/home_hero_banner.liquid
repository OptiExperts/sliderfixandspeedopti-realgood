<div class="rgf_home_hero_banner home_hero_banner" id="section-{{ section.id }}" style="{% if section.settings.hh_banner_img != blank %} background-image:url({{ section.settings.hh_banner_img | img_url: 'master' }}) {% else %} background-image:url(https://via.placeholder.com/1920x475) {% endif %}">
  <div class="hh__caption">    
	
    <div class="container wide">
      <div class="text">
        {%- if section.settings.hh_banner_caption1 != '' -%}
        <h2>{{ section.settings.hh_banner_caption1 }}</h2>  
        {%- endif -%}
        {%- if section.settings.hh_banner_caption2 != '' -%}
        <h6>{{ section.settings.hh_banner_caption2 }}</h6>  
        {%- endif -%}        
      </div>
      <div class="buttons">
        {%- if section.settings.hh_banner_btn_text != '' -%}
        <a href="{{ section.settings.hh_banner_btn_url }}" class="lmBtn">{{ section.settings.hh_banner_btn_text }}</a>
        {%- endif -%} 
      </div>
    </div>
    
  </div>
</div>	
<style>
  
  /*#shopify-section-{{ section.id }}{
  	display:none !important;
  }*/
  
