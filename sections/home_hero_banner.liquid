    display:block;
    margin:0px auto;
    
  }
  #section-{{ section.id }}{
    width:100%;
    background-position:center center;
    background-size:cover;
    background-repeat:no-repeat;
    padding-top:39.75%;
    height:0;
    position:relative;
  }
  #section-{{ section.id }} .hh__caption{
  	position:absolute;
    left:0;
    right:0;
    margin:auto;
    top:52%;
    transform:translateY(-50%);
    width:100%;
  }
  #section-{{ section.id }} .hh__caption .text{
  	max-width:460px !important;
    text-align:center;
  }
  #section-{{ section.id }} .hh__caption .text h2{
/*   	font-family:"LocalBreweryFour-Regular"; */
/*     font-family:"SourceSerifPro-Bold"; */
