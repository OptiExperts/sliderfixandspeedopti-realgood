      padding:10px 25px 12px !important;
    }
    
  }
  @media (max-width:359px){
    #section-{{ section.id }} .hh__caption .text,
    #section-{{ section.id }} .buttons{
      max-width:265px !important;
    }
    #section-{{ section.id }} .hh__caption .text h2{
/*       font-size:26px;
      margin-bottom:15px; */
      font-size:24px;
      margin-bottom:10px;
    }
    #section-{{ section.id }} .buttons .lmBtn{
      padding:8px 20px 10px !important;
      font-size:18px;
    }
    
  }
  
  
  

