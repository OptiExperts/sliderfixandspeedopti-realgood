{% if section.settings.section_enable %}
<div class="cta-area pt-75 pb-75" id="section-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="cta-content">
          {% if section.settings.cta_title != blank %}
          <div class="cta-title">
            <h2>{{ section.settings.cta_title }}</h2>
          </div>
          {% endif %}

          {% if section.settings.call_to_action_btn != blank %}
          <div class="cta-button">
            <a class="lezada-button lezada-button--medium lezada-cta-button lezada-cta-button-white" href="{{ section.settings.call_to_action_btn_link }}">{{ section.settings.call_to_action_btn }}</a>
          </div>
          {% endif %}
          {% if section.settings.call_to_action_btn_2 != blank %}
          <div class="cta-button">
            <a class="lezada-button lezada-button--medium lezada-cta-button lezada-cta-button-white" href="{{ section.settings.call_to_action_btn_link_2 }}">{{ section.settings.call_to_action_btn_2 }}</a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}

<style>
  #section-{{ section.id }} .cta-title{max-width: 400px;width: 100%;}
  #section-{{ section.id }} .cta-title h2 {color: {{ block.settings.call_to_actin_Title_color }};font-size: 55px;line-height: 55px;font-weight: 700 !important;}
  #section-{{ section.id }} .cta-title h2 i{display: block;}

  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'call_to_action_style' -%}
  #section-{{ section.id }} .cta-title{max-width: 400px;width: 100%;}
  #section-{{ section.id }} .cta-title h2 {
    color: {{ block.settings.call_to_actin_Title_color }};
	font-size: 55px;line-height: 55px;font-weight: 900;}
  #section-{{ section.id }} .cta-title h2 i{display: block;}
  #section-{{ section.id }} .lezada-cta-button {
    background-color: {{ block.settings.btn_Bg_color }};
    color: {{ block.settings.btn_color }} !important;
    border-color: {{ block.settings.btn_border_color }};
  }	
  #section-{{ section.id }} .lezada-cta-button:hover {
    background-color: {{ block.settings.btn_hover_bg_color }};
    color: {{ block.settings.btn_hover_color }} !important;
    border-color: {{ block.settings.btn_hover_border_color }};
  }	


  {%- endcase -%}
  {%- endfor -%}

</style>

{% include 'section_typography' %}
<style>
	{%- for block in section.blocks -%}
		#shopify-section-{{ section.id }}
		{
			background: {{ block.settings.section_bg_color }};
			position: relative;
		}

		{%- if block.settings.section_bg_image -%}
			#shopify-section-{{ section.id }}::after{
			  content: "";
			  background: url("{{ block.settings.section_bg_image | img_url: 'master' }}") center center repeat-x transparent;
                opacity: 0.5; top: 0;left: 0; bottom: 0;right: 0;position: absolute; z-index: 1;}
		{%- endif -%}

	{%- endfor -%}
	#section-{{ section.id }}{
		background: none !important;
		position: relative;
		z-index: 2;
	}
</style>
