                  "label": "Item Image"
                },
                {
                  "type": "text",
                  "id": "collgrid_item_title",
                  "label": "Item Title"
                },
                {
                  "type": "url",
                  "id": "collgrid_item_link",
                  "label": "Item Link"
                }
              ]
   		}
  	],
    "presets": [
	    {
	        "category": "3. collections",
	        "name": "Collection Grid + Title"
	    }
    ]
}
{% endschema %}