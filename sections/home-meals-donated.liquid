{% if section.settings.section_enable %}
<div class="home--donated--sec" id="section-{{ section.id }}" style="{% if section.settings.ticker_bgimg != blank %}background-image:url({{ section.settings.ticker_bgimg | img_url: 'master' }}){% endif %}">
  <div class="container">
    <div class="content">
      {% if section.settings.ticker_img != blank %}
      <div class="image">
        <img class="bnrImg" src="{{ section.settings.ticker_img | img_url: 'master' }}" class="lazyload img-fluid" alt="">
      </div>
      {% endif %}
      <div class="wrap text">
        <h2>{{ section.settings.sec_heading }}</h2>
        <p class="desc">{{ section.settings.sec_desc }}</p>
      </div>
    </div>
  </div>  
</div>
{% endif %}

<style>
  #section-{{ section.id }}{
    position:relative;
    width:100%;
    display:block;
    padding:125px 0;
    background:#fff;
/*     background-size:auto 100%; */
    background-size:100% 100%;
    background-position:center;
    background-repeat:no-repeat;
  }
  #section-{{ section.id }} .image,
  #section-{{ section.id }} .wrap{
	text-align:center;
/*     max-width:894px; */
    max-width:800px;
    margin:0 auto;
  }
  #section-{{ section.id }} .image{
  	padding-bottom:20px;
  }
  #section-{{ section.id }} .text h2{
/*   	font-size:72px; */
    font-size:56px;
/*     line-height:1.25; */
    line-height:1.15;
    font-weight:bold;
    margin-bottom:15px;
    color:#DD3629;
    text-transform:uppercase;
    text-shadow:1px 1px 1px #666;
  }
  #section-{{ section.id }} .desc{
/*   	font-size:45px; */
/*     line-height:1.35; */
    font-size:36px;
    line-height:1.15;
    color:#000;
    text-shadow:1px 1px 1px #999;
  }
  
/*   @media screen and (min-width:1280px){
    #section-{{ section.id }}{background-size:100% 100%;}
  } */
  
  @media screen and (max-width:1351px){
    #section-{{ section.id }} .image{max-width:640px;}
    #section-{{ section.id }} .text h2{font-size:52px;}
    #section-{{ section.id }} .desc{font-size:32px;}
  }
  
  @media screen and (max-width:1279px){
    #section-{{ section.id }}{background-size:cover;}
    #section-{{ section.id }} .image{max-width:600px;}
    #section-{{ section.id }} .text h2{/*font-size:56px;*/font-size:48px;margin-bottom:12px;}
    #section-{{ section.id }} .desc{/*font-size:36px;*/font-size:30px;}
    #section-{{ section.id }}{padding:100px 0;}
    
  }

  @media screen and (max-width:1139px){
    #section-{{ section.id }} .image{max-width:520px;}
    #section-{{ section.id }} .text h2{/*font-size:46px;*/font-size:42px;margin-bottom:10px;}
    #section-{{ section.id }} .desc{/*font-size:32px;*/font-size:28px;}
    #section-{{ section.id }}{padding:80px 0;}
  }
  @media screen and (max-width:991px){
    #section-{{ section.id }} {padding:60px 0;}
    #section-{{ section.id }} .container{max-width:95%;}
    #section-{{ section.id }} .text h2{/*font-size:36px;*/font-size:36px;text-shadow:none;}
    #section-{{ section.id }} .desc{/*font-size:28px;*/font-size:26px;text-shadow:none;}
    #section-{{ section.id }} .image{padding-bottom:15px;max-width:420px;}
/*     #section-{{ section.id }} .image img{max-width:80%;} */
  }
  @media screen and (max-width:767px){
    #section-{{ section.id }} .container{max-width:100%;}
    #section-{{ section.id }} .text h2{font-size:32px;}
    #section-{{ section.id }} .desc{font-size:24px;}
    #section-{{ section.id }} .image img{max-width:85%;}
  }
  @media screen and (max-width:639px){
    #section-{{ section.id }} {padding:50px 0;}
    #section-{{ section.id }} .text h2{font-size:28px;}
    #section-{{ section.id }} .desc{font-size:22px;}
    #section-{{ section.id }} .image{padding-bottom:10px;}
    #section-{{ section.id }} .image img{max-width:90%;}
  }
  @media screen and (max-width:479px){
    #section-{{ section.id }} .text h2{font-size:26px;line-height:1.15;margin-bottom:8px;}
    #section-{{ section.id }} .desc{font-size:20px;line-height:1.2;}
    
  }
  
</style>

{% schema %}
  {
    "name": "Home Meals Donated",
    "settings": [
		{
		  "type": "header",
          "content": "Section Enable"
        },
		{
          "type": "checkbox",
          "id": "section_enable",
          "label": "Section Enable",  
          "default": true
      	},
		{
          "type": "header",
          "content": "Content"
        },
		{
          "type": "image_picker",
          "id": "ticker_bgimg",
          "label": "Background Image",
          "info": "Recommended Size: 1920 x 600 px"
        },
        {
          "type": "image_picker",
          "id": "ticker_img",
          "label": "Ticker Image",
          "info": "Recommended Size: 585 x 162 px"
        },
		{
          "type": "text",
          "id": "sec_heading",
          "label": "Heading",
          "default": "Meals Donated"
        },
		{
          "type": "textarea",
          "id": "sec_desc",
          "label": "Description",
		  "default": "Making nutrient-dense foods more accessible to <strong>EVERYONE</strong> across America, one Food Bank donation at a time."
        }
	],
	"presets": [
		{
		  "name": "Home Meals Donated",
		  "category": "4. Banner"
		}
	]
  }
{% endschema %}

