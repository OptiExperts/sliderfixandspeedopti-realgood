{% if section.settings.section_enable %}
<div class="wwe--donated--sec" id="section-{{ section.id }}">
  <div class="container">
    {% if section.settings.ticker_img != blank %}
    <div class="image">
      <img class="bnrImg" src="{{ section.settings.ticker_img | img_url: 'master' }}" class="lazyload img-fluid" alt="">
    </div>
    {% endif %}
    <div class="wrap">
      <h2>{{ section.settings.sec_heading }}</h2>
      <p class="desc">{{ section.settings.sec_desc }}</p>
    </div>
  </div>  
</div>
{% endif %}

<style>
  #section-{{ section.id }}{
    position:relative;
    width:100%;
    display:block;
    padding:50px 0;
    background:#F4F3F2;
  }
  #section-{{ section.id }} .image,
  #section-{{ section.id }} .wrap{
	text-align:center;
    max-width:894px;
    margin:0 auto;
  }
  #section-{{ section.id }} .image{
  	padding-bottom:20px;
  }
  #section-{{ section.id }} .wrap h2{
  	font-size:65px;
    line-height:1.35;
    font-weight:bold;
    margin-bottom:15px;
    color:#DD3629;
    text-transform:uppercase;
    font-family:'Adrianna';
    font-weight:800;
  }
  #section-{{ section.id }} .desc{
  	font-size:30px;
    line-height:1.35;
    color:#000;
    font-family:'Adrianna';
  }
  
  @media screen and (max-width:1279px){
    #section-{{ section.id }} .wrap h2{font-size:52px;margin-bottom:12px;}
    #section-{{ section.id }} .desc{font-size:28px;}
    
  }

  @media screen and (max-width:1139px){
    #section-{{ section.id }} .wrap h2{font-size:42px;margin-bottom:10px;}
    #section-{{ section.id }} .desc{font-size:26px;}
  }
  @media screen and (max-width:991px){
    #section-{{ section.id }} {padding:40px 0;}
    #section-{{ section.id }} .container{max-width:95%;}
    #section-{{ section.id }} .wrap h2{font-size:36px;}
    #section-{{ section.id }} .desc{font-size:22px;}
    #section-{{ section.id }} .image{padding-bottom:15px;}
    #section-{{ section.id }} .image img{max-width:80%;}
  }
  @media screen and (max-width:767px){
    #section-{{ section.id }} .container{max-width:100%;}
    #section-{{ section.id }} .wrap h2{font-size:32px;}
    #section-{{ section.id }} .desc{font-size:20px;}
    #section-{{ section.id }} .image img{max-width:85%;}
  }
  @media screen and (max-width:639px){
    #section-{{ section.id }} {padding:30px 0;}
    #section-{{ section.id }} .wrap h2{font-size:28px;}
    #section-{{ section.id }} .desc{font-size:18px;}
    #section-{{ section.id }} .image{padding-bottom:10px;}
    #section-{{ section.id }} .image img{max-width:90%;}
  }
  @media screen and (max-width:479px){
    #section-{{ section.id }} .wrap h2{font-size:24px;line-height:1.15;margin-bottom:5px;}
    #section-{{ section.id }} .desc{font-size:16px;line-height:1.2;}
    
  }
  
</style>

{% schema %}
  {
    "name": "Why We Exists Donated",
    "settings": [
		{
		  "type": "header",
          "content": "Section Enable"
        },
		{
          "type": "checkbox",
          "id": "section_enable",
          "label": "Section Enable",  
          "default": true
      	},
		{
          "type": "header",
          "content": "Content"
        },
        {
          "type": "image_picker",
          "id": "ticker_img",
          "label": "Image",
          "info": "Recommended Size: 585 x 162 px"
        },
		{
          "type": "text",
          "id": "sec_heading",
          "label": "Heading",
          "default": "Meals Donated"
        },
		{
          "type": "textarea",
          "id": "sec_desc",
          "label": "Description",
		  "default": "Making nutrient-dense foods more accessible to <strong>EVERYONE</strong> across America, one Food Bank donation at a time."
        }
	]
  }
{% endschema %}

