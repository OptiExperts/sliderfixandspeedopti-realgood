{% comment %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
<script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>
{% endcomment %}
<div class="bxslider-area pt-50 pb-50" id="section-{{ section.id }}" {%- if section.settings.bxslider_background -%} style="background-image:url({{ section.settings.bxslider_background | img_url: 'master' }})" {% endif %}>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {% if section.settings.slider_title != blank %}
          <h2>{{ section.settings.slider_title }}</h2>
        {% endif %}
        {% if section.settings.slider_subtitle != blank %}
          <h3>{{ section.settings.slider_subtitle }}</h3>
        {% endif %}
        <div class="fbslider">
            {%- for block in section.blocks -%}
                  <div class="eachReview">
                    <div class="reviewTop">
                      <div class="reviewHead"><img src="{{ block.settings.reviewer_image | img_url: '160x160' }}" ></div>
                      <div class="reviewerName">
                        <div class="reviewerNameTop"><span class="reviewer">{{ block.settings.review_head }} <i></i></span> recommends <span class="brand">Real Good Foods</span></div>
                        <div class="reviewDate">{{ block.settings.review_date }} <i></i></div>
                      </div>
                      <div class="clear"></div>
                    </div>
                    <div class="reviewBottom">
                      <p>{{ block.settings.review_desc }}</p>
                    </div>
                  </div>
          {%- endfor -%}
        </div>        
      </div> 
    </div>  
  </div>  
</div>
<script>jQuery(document).ready(function(){jQuery(".fbslider").bxSlider({controls:!1,adaptiveHeight:!1,auto:!0,pause:6e3,autoDelay:2e3})});</script>
<style>
  
.eachReview .reviewTop{margin-bottom:10px}.eachReview .reviewTop .reviewHead{float:left;max-width:75px}.eachReview .reviewTop .reviewerName{float:left;margin-left:15px}.eachReview .reviewTop .reviewerName .reviewerNameTop{font-size:24px;color:#90949c}.eachReview .reviewTop .reviewerName .reviewerNameTop .reviewer{font-size:24px;color:#385898;font-weight:700}.eachReview .reviewTop .reviewerName .reviewerNameTop .reviewer i{background-image:url({{ 'fb_review_image.png' | asset_url }});background-size:51px 146px;background-position:-25px -106px;background-repeat:no-repeat;height:17px;width:17px;display:inline-block;margin:0 5px}.eachReview .reviewTop .reviewerName .reviewerNameTop .brand{color:#385898;font-size:24px;margin-top:10px}.eachReview .reviewTop .reviewerName .reviewDate{color:#616770;font-size:18px;line-height:26px}.eachReview .reviewTop .reviewerName .reviewDate i{background-image:url({{ 'fb_review_image2.png' | asset_url }});background-size:53px 360px;background-position:-42px -232px;background-repeat:no-repeat;height:18px;width:18px;display:inline-block}.eachReview .reviewBottom{margin-top:20px}.eachReview .reviewBottom p{font-size:22px;color:#000;line-height:30px;font-family:"Avenir Next",sans-serif}.clear{margin:0 auto;clear:both}
  #section-{{ section.id }} {background:#fff;padding:55px 0 100px !important;background-size:auto 100%;background-position:center;background-repeat:no-repeat;}
  #section-{{ section.id }} h2{font-family:"Avenir Next";font-size:38px;line-height:1;font-weight:700;color:#000;text-align:center;margin-bottom:0;}
  #section-{{ section.id }} h2 i{/*font-family:"SourceSerifPro-Bold";*/font-family:"Montserrat";font-size:48px;line-height:1;/*font-weight:400;*/font-weight:700;font-style:normal;}
  #section-{{ section.id }} h3{text-align:center;margin-bottom:50px;margin-top:-5px;font-size:30px;font-weight:700;line-height:1;}
  #section-{{ section.id }} h3 span{/*font-family:"SourceSerifPro-Bold";*/font-family:"Montserrat";font-size:48px;line-height:1;/*font-weight:400;*/font-weight:700;}
  #section-{{ section.id }} .bx-wrapper{background:#fff;padding:40px 40px 125px;border:3px solid #c97601;border-radius:40px;}
  #section-{{ section.id }} .bx-wrapper .bx-pager{left:0;bottom:30px;}
  #section-{{ section.id }}  .bx-wrapper .bx-pager.bx-default-pager a{background:transparent;border:2px solid #ffc107;width:20px;height:20px;border-radius:10px;}
  #section-{{ section.id }}  .bx-wrapper .bx-pager.bx-default-pager a.active{background:#ffc107;}
  
  @media (min-width:1921px){#section-{{ section.id }}{background-size:100% 100%;}}
  @media screen and (max-width: 800px){ #section-{{ section.id }} .bx-wrapper{padding: 20px;}
    .eachReview .reviewTop .reviewHead{ float: none;max-width: 150px;margin: 0px auto 40px;}
    .eachReview .reviewTop .reviewerName{float: none;margin-left: 0px;}
  }
  @media (max-width:1279px){#section-{{ section.id }}{padding:60px 0 80px !important;}
    #section-{{ section.id }} .bx-wrapper{padding:40px 40px 100px;}
  }
  @media (max-width:1139px){
    #section-{{ section.id }} h2{font-size:32px;}
    #section-{{ section.id }} h2 i,#section-{{ section.id }} h3 span{font-size:42px;}
    #section-{{ section.id }} h3{font-size:28px;margin-bottom:40px;}
  }
  @media (max-width:991px){
   	#section-{{ section.id }}{padding:60px 0 !important;}
    #section-{{ section.id }} h2{font-size:30px;}
    #section-{{ section.id }} h2 i,#section-{{ section.id }} h3 span{font-size:40px;}
    #section-{{ section.id }} h3{margin-bottom:35px;}
    #section-{{ section.id }} .bx-wrapper{padding:30px 30px 85px;}
  }
  @media (max-width:767px){
   	#section-{{ section.id }}{padding:50px 0 !important;}
    #section-{{ section.id }} h2{font-size:28px;}
    #section-{{ section.id }} h2 i,#section-{{ section.id }} h3 span{font-size:36px;}
    #section-{{ section.id }} h3{margin-bottom:30px;font-size:24px;}
    #section-{{ section.id }} .bx-wrapper{padding:30px 25px 75px;}
  }
  @media (max-width:639px){
    #section-{{ section.id }}{padding:50px 0 40px !important;}
    #section-{{ section.id }} h2{font-size:26px;}
    #section-{{ section.id }} h2 i,
    #section-{{ section.id }} h3 span{font-size:32px;}
    #section-{{ section.id }} h3{font-size:22px;}
    #section-{{ section.id }} .bx-wrapper{padding:20px 15px 75px;}
    .eachReview .reviewBottom{margin-top:12px;}    
    .eachReview .reviewBottom p{font-size:18px;line-height:1.25;}
    .eachReview .reviewTop .reviewerName .reviewerNameTop,
    .eachReview .reviewTop .reviewerName .reviewerNameTop .reviewer,
    .eachReview .reviewTop .reviewerName .reviewerNameTop .brand{font-size:18px;line-height:1.25;}
    .eachReview .reviewTop .reviewerName .reviewDate{font-size:16px;line-height:1.25;}
    #section-{{ section.id }} .bx-wrapper .bx-pager.bx-default-pager a{width:15px;height:15px;}
  }
  @media (max-width:479px){
    #section-{{ section.id }} h2{font-size:22px;}
    #section-{{ section.id }} h2 i,#section-{{ section.id }} h3 span{font-size:26px;}
    #section-{{ section.id }} h3{font-size:20px; margin-bottom:25px;}
    #section-{{ section.id }} .bx-wrapper{padding:15px 15px 75px;}
  }
</style>
{% schema %}
  {
    "name": "BxSlider - Homepage",
    "settings": [
      {
         "type": "header",
         "content": "Slider Settings"
      },
      {
        "type": "image_picker",
        "id": "bxslider_background",
        "label": "Section Background"
      },
      {
            "type": "textarea",
            "id": "slider_title",
            "label": "Slider Heading",
            "default": "<i>Real</i> reviews from real <i>People</i>"
      },
	  {
            "type": "textarea",
            "id": "slider_subtitle",
            "label": "Slider Sub Heading",
			"default": "1,000s of <span>5 Star</span> Reviews!"
      }
    ],
    "blocks":[
      {
      "type": "bxslider_item",
      "name": "Slide Item",
      "limit": 12,
      "settings": [
        {
          "type": "header",
          "content": "FB Review Item"
          },
        {
            "type": "text",
            "id": "review_head",
            "label": "Reviewer Name"
        },
        {
            "type": "text",
            "id": "review_date",
            "label": "Review Date"
        },
        {
            "type": "textarea",
            "id": "review_desc",
            "label": "Review Text"
        },
        {
            "type": "image_picker",
            "id": "reviewer_image",
            "label": "Reviewer Image",
            "info": "Recommended Size: 80 x 80 px Transparent PNG."
        }
      ]
      }
    ],
	"presets": [
        {
          "category": "BxSlider",
          "name": "1. BxSlider - Homepage"
        }
     ]
  }
{% endschema %}

