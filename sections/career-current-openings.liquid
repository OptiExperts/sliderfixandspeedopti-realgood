{% if section.settings.enable_current_openings == true %}
<div class="current--openings" id="section-{{ section.id }}">
  <div class="container">
    <div class="jobs--main">      
      <div class="faq--item jobs open">
        <div class="faq--q">
          <h3>{% if section.settings.current_opening_title != blank %}{{section.settings.current_opening_title}}{% else %}Current Openings{% endif; %}</h3>
        </div>
        <div class="faq--ans">
          <div class="inner">
            <div class="head--part">
              <h4>{% if section.settings.current_opening_heading != blank %}{{section.settings.current_opening_heading}}{% else %}RGF{% endif; %}</h4>
              {% if section.settings.current_opening_sub != blank %}
              <h5>{{section.settings.current_opening_sub}}</h5>
              {% endif; %}
              {% if section.settings.job_type_title != blank %}
              <h6>{{section.settings.job_type_title}}</h6>
              {% endif; %}
            </div>
            <div class="job--items">
              {%- for block in section.blocks -%}
              
              {% assign job_title = block.settings.job_title | downcase %}
              
              <div class="job" id="{{ job_title | handleize }}">
                <div class="outer--part">
                  <h6><a href="{{canonical_url}}/?job-id={{ job_title | handleize }}">{{block.settings.job_title}}</a></h6>
                  <p class="loc">Location: {{block.settings.job_locaion}}</p>
                </div>
                <div class="inner--part" style="display:none;">
                  <h4 class="title">{{block.settings.job_title}}</h4>
                  <p class="at">at {% if section.settings.current_opening_heading != blank %}{{section.settings.current_opening_heading}}{% else %}RGF{% endif; %}
                    (<a href="{{section.settings.career_page_link}}">View all Jobs</a>)</p>
                  <p class="jloc"><span>Job Location: </span>{{block.settings.job_locaion}}</p>
                  <p class="jhours"><span>Job Hours: </span>{{block.settings.job_hours}}</p>
                  <div class="jdesc">{{block.settings.job_desc}}</div>
                  
                </div>
              </div>
              
              {%- endfor -%} 
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>

</div>
{% endif %}

