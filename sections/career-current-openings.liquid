<script>
  jQuery(document).ready(function($){
    $('.faq--item').each(function(){
      $(this).find('.faq--q').click(function(){
      	
        if($(this).parents('.faq--item').hasClass('open')){
          $(this).parents('.faq--item').find('.faq--ans').slideUp();
          $(this).parents('.faq--item').removeClass('open');
        } else {
          $(this).parents('.faq--item').addClass('open');
          $(this).parents('.faq--item').find('.faq--ans').slideDown();
        }
          
      });
    });
    
  	
  });
</script>