<div class="blog-page-wrapper mb-50 mt-55 mt-sm-30 mb-md-35 mb-sm-30 mb-md-40" id="section-{{ section.id }}">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container-fluid  {%- endif -%}  ">
    <div class="row">
      <div class="col-lg-12 order-1 order-lg-2 mb-md-30 mb-sm-20">
        <div class="vidFilter">
          <ul>
            <li><a data-type="pro-tip" class="active">Pro Tips</a></li>
            <li><a data-type="all">All Recipes</a></li>
            <li><a data-type="entrees">Entrees</a></li>
            <li><a data-type="breakfast">Breakfast</a></li>
            <li><a data-type="pizza">Pizza</a></li>
            <li><a data-type="snacks-apps">Snacks / Apps</a></li>
          </ul>
        </div>
        {%- assign blogs_limit = section.settings.blog_limit_handle -%}
        {%- paginate blog.articles by 1000 -%} 
        
        <div class="row {% if section.settings.blog_layout == 'masonry' %}  blog-post-wrapper blog-post-wrapper--masonry {% endif %}">
          {% for article in blog.articles %}
            <div class="col-lg-3 col-md-3 col-sm-6 col-12 single-slider-post grid-item mb-60 recipes-post {%- for tag in article.tags -%}{{' '}}{{ tag | handle }}{%- endfor -%}">
              {% include 'recipes-grid-item' %}
            </div>
          {% endfor %}
        </div>
        
        <div class="row">
          <div class="col-lg-12">
            {%- if paginate.pages > 1 -%}
            {% include 'pagination' %}
            {%- endif -%} 
          </div>
        </div>
        {%- endpaginate -%}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  jQuery(document).ready(function(){

    //Show pro tips by default
    jQuery('.recipes-post').addClass('hideitt');
    jQuery('.recipes-post.pro-tip').removeClass('hideitt');

    jQuery('.vidFilter a').on('click', function (e) {
        var collid = $(this).attr('data-type');
        jQuery('.vidFilter a').removeClass('active');
        jQuery(this).addClass('active');
        if(collid === 'all')
        {
          jQuery('.recipes-post').removeClass('hideitt');
        }
        else
        {
          jQuery('.recipes-post').addClass('hideitt');
          jQuery('.recipes-post.'+collid).removeClass('hideitt');
          console.log('.recipes-post.'+collid);
        }

        return false;
    });
  });
</script>
<style>
  .hideitt { display: none !important; }
  #section-{{ section.id }} .post-title{width:90%;margin-left:auto;margin-right:auto}
  #section-{{ section.id }} .post-title a{
    color:#FC6A00;
    font-size:24px;
    line-height:1.1;
    text-align:center;
    font-weight:700;
    display:block;
  }
  #section-{{ section.id }} .col-lg-12 .row > .mb-60{margin-bottom:30px !important}
  #section-{{ section.id }} .pagination ul li a{color:#FD7A7A}
  #section-{{ section.id }} .pagination ul li a:hover{color:#666}
  #section-{{ section.id }} .pagination ul li.disabled a{color:#999}
  #section-{{ section.id }} .pagination ul li.active a{font-weight:bold}
  
  @media screen and (max-width:1279px){
    #section-{{ section.id }} .post-title a{font-size:22px}
  }
  @media screen and (max-width:1139px){
    #section-{{ section.id }} .post-title a{font-size:18px}
    #section-blog-template .post-title{width:95%;margin-top:0}
    #section-{{ section.id }} .col-lg-12 .row > .mb-60{margin-bottom:10px !important}
    #section-{{ section.id }} .single-slider-post__image{margin-bottom:15px !important}
  }
  @media screen and (max-width:767px){
    #section-{{ section.id }} .post-title a{font-size:16px}
  }
  @media screen and (min-width:375px) and (max-width:639px){
    #section-{{ section.id }} .col-lg-12 .row > .col-sm-6{
      -ms-flex: 0 0 50%;
      flex: 0 0 50%;
      max-width: 50%;
    }
    #section-{{ section.id }} .post-title a{font-size:12px}
  }
  
  #section-{{ section.id }} .vidFilter{display:block;padding-bottom:15px}
  #section-{{ section.id }} .vidFilter ul{margin-left:0;text-align:center}
  #section-{{ section.id }} .vidFilter li{display:inline-block;margin:15px 2.5px;list-style:none}
  #section-{{ section.id }} .vidFilter a{
    padding:3px 15px;
    font-size:20px;
    line-height:1;
    border:3px solid #FA8700;
    color:#FA8700;
    font-weight:bold;
    border-radius:22px;
    text-transform:uppercase;
    cursor:pointer
  }
  #section-{{ section.id }} .vidFilter a.active,
  #section-{{ section.id }} .vidFilter a:hover{
    color:#fff;
    background:#FA8700
  }
  #section-{{ section.id }} .vidFilter a.active{pointer-events:none}
  #section-{{ section.id }} .grid-number{position:relative;margin-bottom:10px}

</style>


