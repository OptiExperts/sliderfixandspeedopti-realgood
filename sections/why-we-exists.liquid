<div class="rgf_wwe whyweexist" id="section-{{ section.id }}">
  <div class="container wide">
	
    {%- if section.settings.wwe_title != '' -%}
    <div class="heading">
      <h1>{{ section.settings.wwe_title }}</h1>
    </div>
    {%- endif -%}
    
    <div class="mainImage">
      
      {%- if section.settings.wwe_sec_link -%}
      	<a href="{{ section.settings.wwe_sec_link }}">
      {% endif %}
      
      {%- if section.settings.wwe_main_img -%}
      	<img src="{{ section.settings.wwe_main_img | img_url: 'master' }}" alt="" class="lazyload">
      {% endif %}
      
      {%- if section.settings.wwe_sec_link -%}
      	</a>
      {% endif %}
      
    </div>
    
  </div>
</div>	
<style>
  
  #section-{{ section.id }}{
  	background:#fff;
    display:block;
    margin:0px auto;
    padding:80px 0 60px;
  }  
  #section-{{ section.id }} .heading{
  	text-align:center;
    padding-bottom:60px;
  }
  #section-{{ section.id }} .heading h1{
  	text-align:center;
    font-size:60px;
    line-height:1.1;
    color:#000;
    font-weight:900;
/*     font-family:"Work Sans",sans-serif; */
    font-family:"Montserrat";
  }
  #section-{{ section.id }} .mainImage{
  	text-align:center;
  }
  #section-{{ section.id }} .mainImage a{
  	display:block;
  }
  #section-{{ section.id }} .mainImage img{
  	display:block;
    margin:0 auto;
  }
  #section-{{ section.id }} .mainImage a:hover img{
  	/*filter: gray;
    -webkit-filter: grayscale(1);
    -webkit-filter: grayscale(100%);
    filter: url(resources.svg#desaturate);
    filter: grayscale(100%);*/
    opacity:0.95;
  }
  
  
  
  @media (min-width:1515px){
    #section-{{ section.id }} .container.wide{max-width:1485px;}
    
  }
  @media (max-width:1399px){
  	#section-{{ section.id }} .heading h1{
     font-size:48px; 
    }
  
  }
  @media (max-width:1279px){
  	#section-{{ section.id }} .heading h1{
     font-size:42px; 
    }
    #section-{{ section.id }} .heading{
      padding-bottom:45px;
    }
  
  }
  @media (max-width:1139px){
  	#section-{{ section.id }} .heading h1{
     font-size:36px; 
    }
    
  }
  @media (max-width:991px){
  	#section-{{ section.id }} .heading h1{
     font-size:32px; 
    }
    #section-{{ section.id }} .heading{
      padding-bottom:40px;
    }
    #section-{{ section.id }}{
      padding:60px 0 45px;    
    }
    
    
  }
  @media (max-width:767px){
  	#section-{{ section.id }} .heading h1{
     font-size:30px; 
    }
    #section-{{ section.id }} .heading{
      padding-bottom:35px;
    }
    
  }
  @media (max-width:639px){
  	#section-{{ section.id }} .heading h1{
     font-size:28px; 
    }
    #section-{{ section.id }} .heading{
      padding-bottom:30px;
    }
    #section-{{ section.id }}{
      padding:50px 0 40px;    
    }
    
  }
  @media (max-width:479px){
  	#section-{{ section.id }} .heading h1{
     font-size:24px; 
    }
    #section-{{ section.id }} .heading{
      padding-bottom:25px;
    }
    
  }
  
  

</style>
{% schema %}
{
    "name": "Why We Exist",
    "settings": [
    	{
         "type": "header",
         "content": "Why We Exist Settings"
      	},
		{
          "type": "text",
          "id": "wwe_title",
          "label": "Section Title",
		  "default": "Why We Exist"
        },		
		{
          "type": "image_picker",
          "id": "wwe_main_img",
          "label": "Main Image"
        },
		{
          "type": "url",
          "id": "wwe_sec_link",
          "label": "Section Link"
        }
    ],
    "presets": [
	    {
	        "category": "4. Banner",
	        "name": "Why We Exist"
	    }
    ]
}
{% endschema %}