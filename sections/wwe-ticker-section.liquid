{% if section.settings.enable_wwe_ticker == true %}
<div class="wwe--ticker" id="section-{{ section.id }}">
  <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="ticker--items">
            {%- for block in section.blocks -%}
            <div class="ticker--item">
              {% if block.settings.ticker_number != blank %}
              <span class="t--number">{{block.settings.ticker_number}}</span>
              {% endif %}
              {% if block.settings.ticker_name != blank %}
              <span class="t--name">{{block.settings.ticker_name}}</span>
              {% endif %}
            </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
</div>
{% endif %}

<style>
  #section-{{ section.id }}{padding-top:25px;padding-bottom:50px;background:#EF6A00;}
  #section-{{ section.id }} .ticker--items{text-align:center;}
  #section-{{ section.id }} .ticker--items .ticker--item{
  	display:inline-block; /*Comment it out when slick slider js is resumed*/
    padding:0 30px;
    text-align:center;
  }
  #section-{{ section.id }} .ticker--item .t--number{
