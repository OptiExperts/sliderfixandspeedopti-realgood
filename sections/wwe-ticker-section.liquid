{% schema %}
  {
    "name": "Why We Exists Ticker",
    "settings": [
      {
        "type": "header",
        "content": "Section Enable"
      },
      {
        "type": "checkbox",
        "id": "enable_wwe_ticker",
        "label": "Enable Ticker Section",  
        "default": true
      }

	],
	"blocks":[
    	{
          "type": "ticker_item",
          "name": "Ticker Item",
              "settings": 
              [	
                {
                  "type": "text",
                  "id": "ticker_number",
                  "label": "Ticker Number (with %)"
                },
				{
                  "type": "text",
                  "id": "ticker_name",
                  "label": "Ticker Name"
                }
                
              ]
   		}
  	]
  }
{% endschema %}

